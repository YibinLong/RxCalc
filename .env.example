# API Keys - Replace with your actual API keys
OPENAI_API_KEY=sk-your-openai-api-key-here
RXNORM_API_KEY=your-rxnorm-api-key-here

# Google Cloud Platform - Replace with your GCP project details
GCP_PROJECT_ID=your-gcp-project-id
GCP_SERVICE_ACCOUNT_KEY_PATH=./service-account-key.json

# Application Configuration
NODE_ENV=development
PORT=5173

# External API URLs
RXNORM_API_BASE_URL=https://rxnav.nlm.nih.gov/REST
FDA_NDC_API_BASE_URL=https://api.fda.gov/drug/ndc.json

# Rate Limiting (milliseconds between requests)
RXNORM_RATE_LIMIT_MS=100
FDA_RATE_LIMIT_MS=200

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_MULTI_PACK_SUPPORT=true
ENABLE_SPECIAL_DOSAGE_FORMS=true

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL_SECONDS=3600

# Security
CORS_ORIGIN=http://localhost:5173
SESSION_SECRET=your-super-secure-session-secret-here
JWT_SECRET=your-super-secure-jwt-secret-here

# Database (if needed for future enhancements)
DATABASE_URL=postgresql://username:password@localhost:5432/rxcalc